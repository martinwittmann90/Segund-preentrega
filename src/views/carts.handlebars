<h1>Carrito de Compras</h1>

{{#if cart.items.length}}
  <table>
    <thead>
      <tr>
        <th>Producto</th>
        <th>Precio</th>
      </tr>
    </thead>
    <tbody>
      {{#each cart.items}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.price}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <p>Total: {{cart.total}}</p>
{{else}}
  <p>No hay productos en el carrito.</p>
{{/if}}
